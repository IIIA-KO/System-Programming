<Window
    x:Class="TarArchiverWPF.ArchiveWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TarArchiverWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ArchiveWindow"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <ListView
            x:Name="taskListView"
            Grid.Row="0"
            Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Folder}" Header="Folder" />
                    <GridViewColumn DisplayMemberBinding="{Binding Progress}" Header="Progress" />
                </GridView>
            </ListView.View>
        </ListView>

        <ScrollViewer Grid.Row="1">
            <TextBox
                x:Name="logTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>
